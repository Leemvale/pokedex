const express = require('express');
const router = express.Router();

const CaughtPokemon = require('../../models/CaughtPokemon');

// @route  GET api/caughtPokemons
// @desc   Get All Caught Pokemons
// @access Public
router.get('/', (req, res) => {
    CaughtPokemon.find()
        .then(pokemons =>  res.json(pokemons))
});

// @route  POST api/caughtPokemons
// @desc   Create A CaughtPokemon
// @access Public
router.post('/', (req, res) => {
    const newPokemon = new CaughtPokemon({
        time: req.body.time,
        pokemonId: req.body.pokemonId
    });

    newPokemon.save().then(caughtPokemon => res.json(caughtPokemon));
});

module.exports = router;